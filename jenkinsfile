pipeline {
    agent { label 'jenkins-agent' }

    tools {
        jdk 'java21'
        maven 'maven143'
    }

    stages {

        stage("Checkout") {
            steps {
                git branch: 'main',
                    credentialsId: 'github',
                    url: 'https://github.com/joshi122/cloud123-jav.git'
            }
        }

        stage("Build") {
            steps {
                sh 'mvn clean package'
            }
        }

        stage("Test") {
            steps {
                sh 'mvn test'
            }
        }

        stage("SonarCloud Analysis") {
            steps {
                withSonarQubeEnv('SonarCloud') {
                    sh '''
                    mvn clean verify sonar:sonar \
                    -Dsonar.projectKey=joshi122_cloud123-jav \
                    -Dsonar.organization=joshi122 \
                    -Dsonar.host.url=https://sonarcloud.io
                    '''
                }
            }
        }
    }
}
